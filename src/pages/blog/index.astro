---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import Blogs from "../../components/blog/Blogs.svelte";

const blogs = await getCollection("blog");
---

<Layout
    title="Blogs"
    description="Read blogs on various tech topics such as Coding, Linux, Dev-tools, IDE's & Code-editors, Graphic Design, Code Infrastructure and more!"
>
    <Fragment slot="meta:og">
        <meta property="og:type" content="website" />
        <meta property="og:image" content="/logo.png" />
        <meta name="twitter:image" content="/logo.png" />
        <meta name="twitter:card" content="summary_large_image" />
    </Fragment>
    <Blogs {blogs} client:load />
</Layout>

<style lang="scss">
    *::-webkit-scrollbar {
        height: 3px;
    }

    *::-webkit-scrollbar-thumb {
        background-image: none;
        background-color: #aaa;
    }
</style>
