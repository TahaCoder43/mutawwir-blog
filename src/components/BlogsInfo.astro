---
import ContentRoll from "./ContentRoll.svelte";
---

<section id="blogs-info">
    <div class:list={["fade", "top"]}></div>
    <div class:list={["fade", "bottom"]}></div>
    <div id="fade-bottom/"></div>
    <ContentRoll client:load />
    <img id="arc" src="/arc.svg" />
    <section id="image-roll"></section>
</section>

<style lang="scss">
    #blogs-info {
        position: sticky;
        top: 0;
        height: 100vh;
        display: flex;

        #image-roll {
            background-color: #ffc;
            width: 100%;
            flex-shrink: 2;
        }

        .fade {
            position: absolute;
            left: 0;

            width: 100%;
            height: 100px;

            background-image: linear-gradient(var(--direction), transparent, var(--color-background) 80%);

            &.top {
                top: 0;
                --direction: to top;
            }

            &.bottom {
                bottom: 0;
                --direction: to bottom;
            }
        }
    }
</style>
